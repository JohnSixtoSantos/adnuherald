         
           <div class="content">
                <div class="container-fluid">

                    <div class="col-lg-12 col-md-12">
                            <div class="card">
                                <div class="card-header card-header-warning">
                                    <h4 class="card-title">Tweet Collections</h4>
                                    <p class="card-category">These are Tweets that you have previously uploaded or collected</p>
                                </div>
                                <div class="card-body table-responsive">
                                    <table class="table table-hover">
                                        <thead class="text-warning">
                                            <th>Collection Name</th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                        </thead>
                                        <tbody>
                                            <% @collections.each do |c| %>
                                                <tr>
                                                    <td><%= c.collection_name %></td>
                                                    <td>
                                                        <a href="view_data/<%= c.id %>"><button class="btn btn-info btn-lg12">View</button></a>
                                                        <a href="edit_data/<%= c.id %>"><button class="btn btn-info btn-lg12">Edit</button></a>

                                                        <!-- Trigger the modal with a button -->
                                                        <button type="button" class="btn btn-info btn-lg12" data-toggle="modal" data-target="#myModal<%= c.id %>">Delete</button>

                                                        <!-- Modal -->
                                                        <div id="myModal<%= c.id %>" class="modal fade" role="dialog">
                                                            <div class="modal-dialog">
                                                                <!-- Modal content-->
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                        <h4 class="modal-title">Delete this collection?</h4>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        <a href="/delete_data/<%= c.id %>"><button type="button" class="btn btn-default">Yes</button></a>
                                                                        <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                    </div>  
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                            <% end %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    
                </div>
            </div> 
        
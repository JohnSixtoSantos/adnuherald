           <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-sm-6">
                            <div class="card card-stats">
                                <div class="card-header card-header-warning card-header-icon">
                                    <div class="card-icon">
                                        <i class="material-icons">content_copy</i>
                                    </div>
                                    <p class="card-category">Dataset Upload</p>
                                    <h3 class="card-title">49/50
                                        <small>GB</small>
                                    </h3>
                                </div>

								<%= form_tag(controller: "data", action: "new_job") do %>
									<%= label_tag(:job_name, "Job Name:") %>
									<%= text_field_tag(:job_name) %>
									<%= label_tag(:keywords, "Keywords:") %>
									<%= text_field_tag(:keywords) %>

									<%= submit_tag("Start Job") %>
								<% end %>

                                <div class="card-footer">
                                    <div class="stats">
                                        <a href="upload_data">Upload Dataset</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

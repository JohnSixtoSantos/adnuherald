         
           <div class="content">
                <div class="container-fluid">
                    <div class="col-lg-12 col-md-12">
                            <div class="card">
                                <div class="card-header card-header-warning">
                                    <h4 class="card-title">Completed Summarizations for Collection <%= @collection.collection_name %> (<%= @collection.created_at %>)</h4>
                                    <p class="card-category">Below is a list of summarizations previously performed this collection.</p>
                                </div>
                                <div class="card-body table-responsive">
                                    <table class="table table-hover">
                                        <thead class="text-warning">
                                            <th>Timestamp</th>
                                            <th>Summary String</th>
                                            <th>Root Word Used</th>
                                            <th>b-Value</th>
                                        </thead>
                                        <tbody>
                                            <% @results.each do |c| %>
                                                <tr>
                                                    <td>
                                                        <%= c.created_at %>
                                                    </td>

                                                    <td>
                                                        <%= c.summary %>
                                                    </td>

                                                    <td>
                                                        <%= c.root_word %>
                                                    </td>

                                                    <td>
                                                        <%= c.b_value %>
                                                    </td>

                                                    <td>
                                                        <a href="results/<%= c.id %>"><button type="bu/tton" class="btn btn-info btn-lg12">View</button></a>
                                                    </td>
                                                </tr>        
                                            <% end %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    
                </div>
            </div> 
        

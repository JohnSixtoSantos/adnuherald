           <div class="content">
                <div class="container-fluid">
                    <div class="col-lg-12 col-md-12">
                            <div class="card">
                                <div class="card-header card-header-warning">
                                    <h4 class="card-title">Completed Topic Analyses for Collection </h4>
                                    <p class="card-category">Below is a list of topic analyses previously performed this collection.</p>
                                </div>
                                <div class="card-body table-responsive">
                                    <table class="table table-hover">
                                        <thead class="text-warning">
                                        </thead>
                                        <tbody>
                                            <% @topics.each do |top| %>
                                                <tr>
                                                <% @words = TopicWord.where(topic_id: top.id).order(:order_number) %>
                                                <th class="text-warning">
                                                    Topic <%= top.topic_number %>
                                                </th>
                                                <% @words.each do |c| %>
                                                    <td>
                                                        <%= c.word_text %>        
                                                    </td>
                                                <% end %>
                                                </tr>
                                            <% end %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>   
                </div>
            </div> 

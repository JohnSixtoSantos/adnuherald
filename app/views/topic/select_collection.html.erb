         
           <div class="content">
                <div class="container-fluid">
                    <div class="col-lg-12 col-md-12">
                            <div class="card">
                                <div class="card-header card-header-warning">
                                    <h4 class="card-title">Topic Analysis</h4>
                                    <p class="card-category">Select a Tweet collection for topic analysis</p>
                                </div>
                                <div class="card-body table-responsive">
                                    <table class="table table-hover">
                                        <thead class="text-warning">
                                            <th>Collection Name</th>
                                            <th></th>
                                        </thead>
                                        <tbody>
                                            <% @collections.each do |c| %>
                                                <tr>
                                                    <td><%= c.collection_name %></td>
                                                    
                                                    <td>
                                                        <a href="view_data/<%= c.id %>"><button type="button" class="btn btn-info btn-lg12">View</button></a>
                                                        <!-- Trigger the modal with a button -->
                                                        <button type="button" class="btn btn-info btn-lg12" data-toggle="modal" data-target="#myModal<%= c.id %>">Use Collection</button>

                                                        <!-- Modal -->
                                                        <div id="myModal<%= c.id %>" class="modal fade" role="dialog">
                                                          <div class="modal-dialog">

                                                            <!-- Modal content-->
                                                            <div class="modal-content">
                                                              <div class="modal-header">
                                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                <h4 class="modal-title">Configure the Topic Analyzer</h4>
                                                              </div>
                                                                <%= form_tag({controller: :topic, action: :run_lda}) do %>
                                                              <div class="modal-body">
                                                                
                                                                    
                                                                    <div>
                                                                    <%= label_tag(:q, "Number of Topics:") %>
                                                                    <%= text_field_tag(:ntopics) %>  
                                                                    </div>

                                                                    <div>
                                                                    <%= label_tag(:q, "Number of Words per Topic:") %>
                                                                    <%= text_field_tag(:nwords) %> 

                                                                    <%= hidden_field_tag(:collection_id, c.id) %>
                                                                    </div>
                                                                    <div>
                                                                        This analysis is going to take a while. 
                                                                    </div>
                                                                    <div>
                                                                        Watch out for the notification when its done!
                                                                    </div>

                                                              </div>
                                                              <div class="modal-footer">
                                                                    <%= submit_tag("Run Analysis", class: "btn btn-default") %>
                                                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                              </div>
                                                                <% end %>
                                                            </div>
                                                            
                                                          </div>
                                                        </div>

                                                    </td>
                                
                                                </tr>
                                            <% end %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    
                </div>
            </div> 
        
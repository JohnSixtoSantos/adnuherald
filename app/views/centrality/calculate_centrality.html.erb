         
           <div class="content">
                <div class="container-fluid">
                    <div class="col-lg-12 col-md-12">
                            <div class="card">
                                <div class="card-header card-header-warning">
                                    <h4 class="card-title">Centrality Analysis</h4>
                                    <p class="card-category">The word cloud represents the frequencies of word found in the corpus.</p>
                                </div>
                                <div class="card-body table-responsive">
                                  
                                    <div id="keywords" style="height: 500px; width: 100%">
                                     </div>

                                    <table class="table table-hover">
                                        <thead class="text-warning">
                                            <th>Words</th>
                                        </thead>
                                        <tbody>
                                            <% @user_hash.each do |k, v| %>
                                                <tr>
                                                    <td>
                                                        <%= k %>
                                                    </td>
                                                    <td>
                                                        <%= v %>
                                                    </td>
                                                </tr>
                                            <% end %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>                    
                </div>
            </div> 
            <script type="text/javascript">

                var words = <%= raw @words.to_json %>;


                $('#keywords').jQCloud(words, {
                      width: 900,
                      height: 450
                });
            </script>